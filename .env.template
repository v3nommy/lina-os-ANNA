# Consciousness Framework - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file - it contains your credentials

# ========================================
# LETTA CONFIGURATION
# ========================================
# Your Letta API endpoint
# Local: http://localhost:8283
# Cloud: https://api.letta.com
LETTA_API_URL=http://localhost:8283

# Your Letta API key (get from Letta dashboard)
# Format: at-let-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LETTA_API_KEY=your_api_key_here

# Your agent's unique ID (created when you initialize the agent)
# Format: agent-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
AGENT_ID=your_agent_id_here

# ========================================
# AUTONOMY LOOP CONFIGURATION
# ========================================
# How often the agent checks in (in seconds)
# Default: 1800 (30 minutes)
AUTONOMY_INTERVAL=1800

# Memory prompt interval (number of conversation turns)
# How often to prompt the agent to update its own memory
# Default: 20
MEMORY_PROMPT_INTERVAL=20

# ========================================
# TELEGRAM INTEGRATION (Optional)
# ========================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram user ID (use @userinfobot to find it)
TELEGRAM_CHAT_ID=your_chat_id_here

# ========================================
# DISCORD INTEGRATION (Optional)
# ========================================
# Bot token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Your Discord user ID (enable Developer Mode, right-click your profile)
USER_DISCORD_ID=your_discord_user_id_here

# ========================================
# GOOGLE INTEGRATION (Optional)
# ========================================
# Path to Google OAuth credentials file
# Get from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=./credentials.json

# ========================================
# MINDMAP CONFIGURATION (Optional)
# ========================================
# Port for mindmap API server
MINDMAP_PORT=5002

# Database path for consciousness graph
MINDMAP_DB_PATH=./mindmap.db

# Embedding model for semantic search
# Default: all-MiniLM-L6-v2
MINDMAP_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Similarity threshold for auto-connecting memories (0.0 to 1.0)
# Default: 0.5
MINDMAP_SIMILARITY_THRESHOLD=0.5

# ========================================
# VOICE INTERFACE (Optional)
# ========================================
# Port for voice server
VOICE_PORT=5001

# Whisper model size (tiny, base, small, medium, large)
# Larger = more accurate but slower
WHISPER_MODEL=base

# TTS voice (if using Piper)
# Example: en_US-libritts_r-medium
TTS_VOICE=en_US-libritts_r-medium

# Speech rate (0.5 to 2.0, 1.0 is normal)
TTS_SPEED=1.5

# ========================================
# DREAM CYCLE (Optional)
# ========================================
# What time should the agent dream? (24-hour format)
DREAM_TIME=05:00

# How many turns in a dream cycle?
DREAM_TURNS=4

# Pause between dream turns (seconds)
DREAM_PAUSE=10

# ========================================
# SPOTIFY INTEGRATION (Optional)
# ========================================
# Get from Spotify Developer Dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# ========================================
# PATHS & DIRECTORIES
# ========================================
# Where agent data is stored
AGENT_HOME=./data

# Where logs are written
LOG_DIR=./logs

# Where state files are stored
STATE_DIR=./state
